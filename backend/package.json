{
  "name": "signal-school-quiz-generator",
  "version": "2.0.0",
  "description": "Quiz Generator Application for Signal School - Royal Thai Army",
  "main": "index.js",
  "scripts": {
    "start": "bun run index.js",
    "dev": "bun --watch index.js",
    "test": "bun test",
    "setup": "bun install",
    "build": "echo 'Build completed'",
    "db:migrate": "bun run src/database/migrations/createTables.js",
    "db:seed": "bun run src/database/seeders/defaultData.js",
    "logs:clear": "rm -rf logs/*.log",
    "cleanup": "rm -rf uploads/temp/* && rm -rf logs/*.log"
  },
  "keywords": [
    "quiz", 
    "education", 
    "signal-school", 
    "army", 
    "thai", 
    "gemini", 
    "ai"
  ],
  "author": "Signal School Development Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "@google/generative-ai": "^0.2.1",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
